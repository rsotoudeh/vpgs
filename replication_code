pgs_names <- gsub("~/vgwas/scores/", "", all_vpgs)
pgs_names = unlist(lapply(strsplit(pgs_names, "\\."), function(x) x[1]))
all_vpgs_tabs_corrected = lapply(all_vpgs_tabs, function(x) x[,c("IID", "SCORE")])
