# read vpgs
all_vpgs = list.files("scores")
all_vpgs = subset(all_vpgs, grepl("same_n", all_vpgs)|
                    grepl("_resid.txt", all_vpgs)|
                    grepl("_gwas_final", all_vpgs)|
                    grepl("vqtl_final_with_alleles", all_vpgs)|
